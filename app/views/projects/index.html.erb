<h1>Projects</h1>

<% @projects.each do |project| %>
  <div class="project">
    <h2><%= project.title %></h2>
    <%= markdown(project.description) %>
    <h3>Technologies Used</h3>
    <ul class="technologies">
      <% project.technologies.each do |technology| %>
        <li><%= technology %></li>
      <% end %>
    </ul>
  </div>
<% end %>
