<h1>Heck yes, here are some posts!</h1>
<ul class="posts">
  <% @posts.each do |post| %>
    <li>
      <%= link_to post.title, post_path(post) %> 
      <%= link_to "edit", edit_post_path(post) %>
      <%= link_to "delete", 
        post_path(post), 
        method: :delete, 
        data: {confirm: "are you sure?"} %>
    </li>
  <% end %>
</ul>

<%= button_to "Create a New Post", new_post_path, method: :get %>
