<%= render "widgets/resource_errors", resource: post %>
<%= form_with model: post, html: {class: "form-vertical posts-form"} do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :body %>
  <%= f.text_area :body %>

  <%= label_tag :publish, "Publish" %>
  <%= check_box_tag :publish %>

  <%= f.submit %>
<% end %>
